<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_animation"

    tools:context=".SettingsActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView style="@style/App_EditTextStyle"
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_settings"
            android:textSize="50sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="8dp" />


        <EditText style="@style/App_EditTextStyle"
            android:id="@+id/editTextDisplayName"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/display_name"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteY="70dp"
            android:importantForAutofill="no" />

        <EditText style="@style/App_EditTextStyle"
            android:id="@+id/editTextEmail"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textWebEmailAddress"
            tools:layout_editor_absoluteY="120dp"
            android:importantForAutofill="no" />

        <EditText style="@style/App_EditTextStyle"
            android:id="@+id/editTextSeeking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/i_am_looking_for"
            android:inputType="text"
            tools:layout_editor_absoluteY="170dp"
            android:importantForAutofill="no" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView style="@style/App_EditTextStyle"
                android:id="@+id/textViewStart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/start"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="11dp"
                tools:layout_editor_absoluteY="221dp" />

            <TextView style="@style/App_EditTextStyle"
                android:id="@+id/textViewEnd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/end"
                android:textSize="25sp"
                tools:layout_editor_absoluteX="11dp"
                tools:layout_editor_absoluteY="221dp" />
        </LinearLayout>


        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/linearLayoutTimeInput"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="211dp"
                tools:layout_editor_absoluteY="221dp">

                <EditText style="@style/App_EditTextStyle"
                    android:id="@+id/editTextSundayStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/sunday"
                    android:inputType="time"
                    android:importantForAutofill="no" />

                <EditText style="@style/App_EditTextStyle"
                    android:id="@+id/editTextMondayStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/monday"
                    android:inputType="time"
                    android:importantForAutofill="no" />

                <EditText style="@style/App_EditTextStyle"
                    android:id="@+id/editTextTuesdayStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/tuesday"
                    android:inputType="time"
                    android:importantForAutofill="no" />

                <EditText style="@style/App_EditTextStyle"
                    android:id="@+id/editTextWednesdayStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/wednesday"
                    android:inputType="time"
                    android:importantForAutofill="no" />

                <EditText style="@style/App_EditTextStyle"
                    android:id="@+id/editTextThursdayStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/thursday"
                    android:inputType="time"
                    android:importantForAutofill="no" />

                <EditText style="@style/App_EditTextStyle"
                    android:id="@+id/editTextFridayStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/friday"
                    android:inputType="time"
                    android:importantForAutofill="no" />

                <EditText style="@style/App_EditTextStyle"
                    android:id="@+id/editTextSaturdayStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/saturday"
                    android:inputType="time"
                    android:importantForAutofill="no" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText style="@style/App_EditTextStyle"
                    android:id="@+id/editTextSundayEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/sunday"
                    android:inputType="time"
                    android:importantForAutofill="no" />

                <EditText style="@style/App_EditTextStyle"
                    android:id="@+id/editTextMondayEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/monday"
                    android:inputType="time"
                    android:importantForAutofill="no" />

                <EditText style="@style/App_EditTextStyle"
                    android:id="@+id/editTextTuesdayEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/tuesday"
                    android:inputType="time"
                    android:importantForAutofill="no" />

                <EditText style="@style/App_EditTextStyle"
                    android:id="@+id/editTextWednesdayEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/wednesday"
                    android:inputType="time"
                    android:importantForAutofill="no" />

                <EditText style="@style/App_EditTextStyle"
                    android:id="@+id/editTextThursdayEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/thursday"
                    android:inputType="time"
                    android:importantForAutofill="no" />

                <EditText style="@style/App_EditTextStyle"
                    android:id="@+id/editTextFridayEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/friday"
                    android:inputType="time"
                    android:importantForAutofill="no" />

                <EditText style="@style/App_EditTextStyle"
                    android:id="@+id/editTextSaturdayEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/saturday"
                    android:inputType="time"
                    android:importantForAutofill="no" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:background="@drawable/button_border_transparent"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/colorPrimary"
                android:id="@+id/buttonCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/returnHomeButton"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="667dp" />

            <Button
                android:background="@drawable/button_border_transparent"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/colorPrimary"
                android:id="@+id/buttonConfirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/confirm_changes"
                tools:layout_editor_absoluteX="180dp"
                tools:layout_editor_absoluteY="667dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>