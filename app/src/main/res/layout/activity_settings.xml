<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Settings"
            android:textSize="50dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="8dp" />


        <EditText
            android:id="@+id/editTextDisplayName"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Display Name"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteY="70dp" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textWebEmailAddress"
            tools:layout_editor_absoluteY="120dp" />

        <EditText
            android:id="@+id/editTextSeeking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="I am looking for..."
            android:inputType="text"
            tools:layout_editor_absoluteY="170dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:id="@+id/textViewAvailability"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Availability"
                android:textSize="24dp"
                tools:layout_editor_absoluteX="11dp"
                tools:layout_editor_absoluteY="221dp" />
            <TextView
                android:id="@+id/textViewStart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Start"
                android:textSize="24dp"
                tools:layout_editor_absoluteX="11dp"
                tools:layout_editor_absoluteY="221dp" />
            <TextView
                android:id="@+id/textViewEnd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="End"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="11dp"
                tools:layout_editor_absoluteY="221dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/linearLayoutDaySelection"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="262dp">

                <CheckBox
                    android:id="@+id/checkBoxSunday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sunday" />

                <CheckBox
                    android:id="@+id/checkBoxMonday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Monday" />

                <CheckBox
                    android:id="@+id/checkBoxTuesday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tuesday" />

                <CheckBox
                    android:id="@+id/checkBoxWednesday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wednesday" />

                <CheckBox
                    android:id="@+id/checkBoxThursday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thursday" />

                <CheckBox
                    android:id="@+id/checkBoxFriday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Friday" />

                <CheckBox
                    android:id="@+id/checkBoxSaturday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saturday" />

                <Button
                    android:id="@+id/buttonConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm Changes"
                    tools:layout_editor_absoluteX="180dp"
                    tools:layout_editor_absoluteY="667dp" />

                <Button
                    android:id="@+id/buttonCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Return"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="667dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutTimeInput"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="211dp"
                tools:layout_editor_absoluteY="221dp">

                <EditText
                    android:id="@+id/editTextSundayStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Sunday"
                    android:inputType="time" />

                <EditText
                    android:id="@+id/editTextMondayStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Monday"
                    android:inputType="time" />

                <EditText
                    android:id="@+id/editTextTuesdayStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Tuesday"
                    android:inputType="time" />

                <EditText
                    android:id="@+id/editTextWednesdayStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Wednesday"
                    android:inputType="time" />

                <EditText
                    android:id="@+id/editTextThursdayStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Thursday"
                    android:inputType="time" />

                <EditText
                    android:id="@+id/editTextFridayStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Friday"
                    android:inputType="time" />

                <EditText
                    android:id="@+id/editTextSaturdayStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Saturday"
                    android:inputType="time" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/editTextSundayEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Sunday"
                    android:inputType="time" />

                <EditText
                    android:id="@+id/editTextMondayEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Monday"
                    android:inputType="time" />

                <EditText
                    android:id="@+id/editTextTuesdayEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Tuesday"
                    android:inputType="time" />

                <EditText
                    android:id="@+id/editTextWednesdayEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Wednesday"
                    android:inputType="time" />

                <EditText
                    android:id="@+id/editTextThursdayEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Thursday"
                    android:inputType="time" />

                <EditText
                    android:id="@+id/editTextFridayEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Friday"
                    android:inputType="time" />

                <EditText
                    android:id="@+id/editTextSaturdayEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Saturday"
                    android:inputType="time" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <![CDATA[

    "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
]]>
</androidx.constraintlayout.widget.ConstraintLayout>