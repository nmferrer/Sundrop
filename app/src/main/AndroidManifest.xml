<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nmferrer.sundrop">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@drawable/gradient_animation" />

        <activity
            android:name=".LoginActivity"
            android:label="Sundrop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PartyChatActivity" />
        <activity android:name=".ViewInvitations" />
        <activity android:name=".ViewActiveUsersActivity"/>
        <activity android:name=".HomeActivity" />
        <activity android:name=".SettingsActivity" />
    </application>

</manifest>